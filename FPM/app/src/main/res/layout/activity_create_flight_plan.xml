<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#151515"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="7.5"
    tools:context="com.aerialglass.fpm.Activities.CreateFlightPlanActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_weight="2"
        android:background="#151515"
        android:orientation="horizontal"
        android:weightSum="10" >

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Name:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etName"
            android:textColor="#ffffff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:ems="10"
            android:text="sample flight plan" >
        </EditText>

        <DatePicker
            android:id="@+id/datePicker1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="3.5" />

        <Button
            android:id="@+id/btnSave"
            android:onClick="onClick_save"
            android:textColor="#1663e3"
            android:background="#1f1f1f"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save" />

        <Button
            android:id="@+id/btnClear"
            android:onClick="onClick_clear"
            android:textColor="#1663e3"
            android:background="#1f1f1f"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear" />

    </LinearLayout>

    <!--
    *************************************************************************************
    *************************************************************************************
    *************************************************************************************
    *************************************************************************************ROW TWO
    -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:background="#1663e3"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10" >

        <TextView
            android:id="@+id/tvDeparture"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="Departure:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spDeparture"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="5.5"
            android:orientation="vertical"
            android:weightSum="2" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4" >

                <TextView
                    android:id="@+id/tvLatitude"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_weight="1"
                    android:text="Latitude" />

                <TextView
                    android:id="@+id/tvLongitude"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_weight="1"
                    android:text="Longitude" />

                <TextView
                    android:id="@+id/tvCourse"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_weight="1"
                    android:text="Course" />

                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_weight="1"
                    android:text="Distance" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4" >

                <TextView
                    android:id="@+id/tvLatitudeVal"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_weight="1"
                    android:text="" />

                <TextView
                    android:id="@+id/tvLongitudeVal"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_weight="1"
                    android:text="" />

                <TextView
                    android:id="@+id/tvCourseVal"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_weight="1"
                    android:text="" />

                <TextView
                    android:id="@+id/tvDistanceVal"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_weight="1"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--
    *************************************************************************************
    *************************************************************************************
    *************************************************************************************
    *************************************************************************************ROW THREE
    -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#151515"
        android:orientation="horizontal"
        android:weightSum="10" >

        <TextView
            android:id="@+id/tvWaypoints"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2.5"
            android:gravity="bottom"
            android:text="WAYPOINTS"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvbLANK"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:text="" />

        <TextView
            android:id="@+id/tvRoute"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="2.5"
            android:gravity="bottom"
            android:text="CURRENT ROUTE"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </LinearLayout>
    
    
    <!--
    *************************************************************************************
    *************************************************************************************
    *************************************************************************************
    *************************************************************************************
    ROW FOUR

    -->

   <LinearLayout
        android:weightSum="10"
        android:background="#151515"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp" >

        <ListView
            android:id="@+id/lvWaypoints"
            android:background="#1663e3"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:layout_height="fill_parent" >

        </ListView>

        <LinearLayout
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="4" >

            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="0dp" >
                
                <TextView
                    android:id="@+id/tvLatitudeW"
                    android:textColor="#ffffff"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="bottom"
                    android:layout_weight="1"
                    android:text="Latitude" />

                <TextView
                    android:id="@+id/tvLongitudeW"
                    android:textColor="#ffffff"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="bottom"
                    android:layout_weight="1"
                    android:text="Longitude" />

                <TextView
                    android:id="@+id/tvCourseW"
                    android:textColor="#ffffff"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="bottom"
                    android:layout_weight="1"
                    android:text="Course" />

                <TextView
                    android:id="@+id/tvDistanceW"
                    android:textColor="#ffffff"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="bottom"
                    android:layout_weight="1"
                    android:text="Distance" />
            </LinearLayout>
                
            
            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="0dp" >
            
                
                <TextView
                    android:id="@+id/tvLatitudeValW"
                    android:textColor="#ffffff"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="top"
                    android:layout_weight="1"
                    android:text="" />

                <TextView
                    android:id="@+id/tvLongitudeValW"
                    android:textColor="#ffffff"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="top"
                    android:layout_weight="1"
                    android:text="" />

                <TextView
                    android:id="@+id/tvCourseValW"
                    android:textColor="#ffffff"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="top"
                    android:layout_weight="1"
                    android:text="" />

                <TextView
                    android:id="@+id/tvDistanceValW"
                    android:textColor="#ffffff"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="top"
                    android:layout_weight="1"
                    android:text="" />
                
            </LinearLayout>
            
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_weight="1.5"
                android:layout_width="fill_parent"
                android:layout_height="0dp" >

                <Button
                    android:id="@+id/btnAdd"
                    android:textColor="#1663e3"
            android:background="#1f1f1f"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:onClick="onClick_add"
                    android:text="Add" />

                <Button
                    android:id="@+id/btnRemove"
                    android:textColor="#1663e3"
            android:background="#1f1f1f"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:onClick="onClick_remove"
                    android:text="Remove" />

            </LinearLayout>

            
        </LinearLayout>

        <ListView
            android:id="@+id/lvCurrentRoute"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:background="#1663e3"
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:layout_height="fill_parent" >

        </ListView>
        
    </LinearLayout>
    
   <!--
    *************************************************************************************
    *************************************************************************************
    *************************************************************************************
    *************************************************************************************
    ROW FIVE

    -->
    
    <LinearLayout
        android:background="#1663e3"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10" >

        <TextView
            android:id="@+id/tvDestination"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.6"
            android:gravity="center"
            android:text="Destination:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spDestination"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2.9" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="5.5"
            android:orientation="vertical"
            android:weightSum="2" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4" >

                <TextView
                    android:id="@+id/tvLatitudeD"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="Latitude" />

                <TextView
                    android:id="@+id/tvLongitudeD"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="Longitude" />

                <TextView
                    android:id="@+id/tvCourseD"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="Course" />

                <TextView
                    android:id="@+id/tvDistanceD"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="Distance" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4" >

                <TextView
                    android:id="@+id/tvLatitudeValD"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="" />

                <TextView
                    android:id="@+id/tvLongitudeValD"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="" />

                <TextView
                    android:id="@+id/tvCourseValD"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="" />

                <TextView
                    android:id="@+id/tvDistanceValD"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>